# =================================
# NEXT.JS PORTFOLIO CONFIGURATION
# =================================
# Copy this file to .env and update the values
# 
# REQUIRED variables must be set for the application to work
# OPTIONAL variables enhance functionality but aren't mandatory

# =================================
# 游댮 REQUIRED: DATABASE CONFIGURATION
# =================================
MONGODB_URI=mongodb://localhost:27017/portfolio
# For production with MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/portfolio?retryWrites=true&w=majority

# =================================
# 游댮 REQUIRED: JWT AUTHENTICATION
# =================================
# CRITICAL: Generate strong, unique secrets for production!
# Generate with: openssl rand -base64 32

JWT_SECRET=WHOAREU
JWT_EXPIRES_IN=1h

# =================================
# 游댮 REQUIRED: DEFAULT ADMIN USER
# =================================
# These create the initial admin account
# 丘멆잺  MUST CHANGE FOR PRODUCTION! 丘멆잺

DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123
DEFAULT_ADMIN_EMAIL=admin@portfolio.com

# =================================
# 游댮 REQUIRED: NEXT.JS APP CONFIGURATION
# =================================
# Application URLs for CORS and redirects
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# For production deployment:
# NEXT_PUBLIC_APP_URL=https://yourdomain.com
# NEXT_PUBLIC_API_URL=https://yourdomain.com/api

# =================================
# 游리 OPTIONAL: GITHUB INTEGRATION
# =================================
# For displaying GitHub repositories and activity
# Get token from: https://github.com/settings/tokens

GITHUB_TOKEN=github_pat_XXXXX
GITHUB_USERNAME=USERNAME

# =================================
# 游리 OPTIONAL: ANALYTICS & MONITORING
# =================================
# Google Analytics tracking
GA_TRACKING_ID=

# Vercel Analytics (if deploying to Vercel)
NEXT_PUBLIC_VERCEL_ANALYTICS=false

# =================================
# 游리 OPTIONAL: EMAIL NOTIFICATIONS
# =================================
# For contact form and admin notifications

EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM=Portfolio <no-reply@yourdomain.com>

# =================================
# 游리 OPTIONAL: EXTERNAL SERVICES
# =================================
# Third-party API keys and services

# Uploadcare for image hosting
UPLOADCARE_PUBLIC_KEY=

# Sentry for error tracking
SENTRY_DSN=

# =================================
# 游리 OPTIONAL: FEATURE FLAGS
# =================================
# Enable/disable features

ENABLE_CONTACT_FORM=false
ENABLE_BLOG=false
ENABLE_COMMENTS=false
ENABLE_ANALYTICS=false

# =================================
# 游리 OPTIONAL: PERFORMANCE
# =================================
# Optimization settings

# Image optimization
NEXT_PUBLIC_IMAGES_DOMAINS=images.unsplash.com,via.placeholder.com,github.com

# Cache settings (in seconds)
CACHE_TTL=3600
